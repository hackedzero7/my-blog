<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>


<style>

.postform{

    display: flex;
justify-content: center;

}
.mainformdiv{
    box-shadow: 5px 0px 25px 00px #eeecec;

width: 600px;
margin-top: 50px;

}





input{
  width: 100%;
  padding: 12px;
  margin: 8px 0;
  display: inline-block;
  border: 1px solid #ccc;
  box-sizing: border-box;
  border-left: 5px solid #04AA6D;

}
textarea{
    border: 1px solid #ccc;


}
label{
  opacity: 0.3;

}

.errorbox{



  height: 100px;
  width: 100%;
}

</style>


<body>
    
    <%- include('components/navigation.ejs')%>


<div class="postform">

<div class="mainformdiv">

<% if(typeof(errors)!=='undefined'){ %>
  <div style="background-color: rgb(236, 118, 92);border-left: 5px solid red; padding: 10px;" class="errorbox">


<%errors.forEach(data=>{ %> 

  <span style="display:block ;"></span><%= data.msg %>   </span> 
  
<% }) %> 

</div> 

   

  <% } %> 

  







<form action="/submitforupdate" method="post">
  <form>
    
    <div class="container">
        <input name="hiddenid" type="hidden" value="<%= datatoupdate._id %>">

      <label for="title"><b>Title</b></label>
      <input type="text" placeholder="Enter Username" name="title" value="<% if(typeof(datatoupdate)!=='undefined'){%> <%= datatoupdate.title %> <%} %> ">
      <label for="postblog"><b>Body</b></label>
      <textarea name="postblog" style="height:300px;width: 100%;border-left: 5px solid #04AA6D; "><% if(typeof(datatoupdate)!=='undefined'){%> <%= datatoupdate.post %><%} %></textarea>   
        <button class="btn btn" style="margin-top: 12px; background-color: #04AA6D; color: white;" type="submit">update</button>
      
    </div>
  
  </form>
</div>





</div>

</body>
</html>